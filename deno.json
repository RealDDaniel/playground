{
  "name": "@playground/deno-utils",
  "version": "1.0.0",
  "exports": "./src/utils.ts",
  "tasks": {
    "dev": "deno run --watch main.ts",
    "start": "deno run main.ts",
    "test": "deno test --allow-env",
    "test:watch": "deno test --watch --allow-env",
    "test:coverage": "deno test --allow-env --coverage=coverage",
    "coverage": "deno coverage coverage --lcov --output=coverage/lcov.info",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "check": "deno check **/*.ts"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
